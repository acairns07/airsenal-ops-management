# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=airsenal_control

# Security (REQUIRED)
JWT_SECRET=change-this-to-a-secure-random-string
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# OpenAI API (REQUIRED for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here
AI_MODEL=gpt-4o-mini
AI_TEMPERATURE=0.7

# Reddit API (REQUIRED for intelligence gathering)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=AIrsenalOps/1.0

# NewsAPI (Optional)
NEWS_API_KEY=your-newsapi-key-here

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Job Queue
MAX_JOB_RETRIES=3
JOB_RETRY_DELAY_SECONDS=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Intelligence Cache (hours)
INTELLIGENCE_CACHE_HOURS=1

# AIrsenal Paths
PERSISTENT_DB_PATH=/data/airsenal/data.db
LOCAL_DB_PATH=/tmp/airsenal.db
